#!/usr/bin/env bash
# Change localhost and facebook.com IP resolution

# Supprimer les anciennes entrÃ©es
grep -v -E '^127\.0\.0\.1|facebook\.com' /etc/hosts > /tmp/hosts.new

# Ajouter les nouvelles
echo "127.0.0.2 localhost" >> /tmp/hosts.new
echo "8.8.8.8 facebook.com" >> /tmp/hosts.new

# Remplacer le fichier proprement
cat /tmp/hosts.new > /etc/hosts
